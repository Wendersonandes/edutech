<div class = "col-md-7">
</div>
<div class = "col-md-4">
	<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email, for: "inputEmail" %><br />
  <%= f.email_field :email, class: "form-control", id: "inputEmail", autofocus: true %></div>

  <div><%= f.label :password, for: "inputPassword" %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
    <%= f.password_field :password, class: "form-control", id: "inputPassword", autocomplete: "off" %></div>

  <div><%= f.label :password_confirmation, id: "inputPasswordConfirm" %><br />
    <%= f.password_field :password_confirmation, class: "form-control", id: "inputPasswordConfirm", autocomplete: "off" %></div>
    <br>

  <div><%= f.submit "Sign up", class: "btn btn-primary btn-block" %></div>
<% end %>
<br>

<%= render "devise/shared/links" %>
</div>
<div class = "col-md-1">
</div>
