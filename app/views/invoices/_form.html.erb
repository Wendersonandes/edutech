<div class = "row">
  <div class = "col-md-9">
    <%= form_for @invoice, html: { class: "form-horizontal", role: "form" } do |f| %>
      <% if @invoice.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

          <ul>
          <% @invoice.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :date, for: "dateInput" %><br>
        <div class = "col-md-12">
          <%= f.date_select :date, class: "form-control", id: "dateInput" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :company, for: "companyInput" %><br>
        <div class = "col-md-12">
          <%= f.text_field :company, class: "form-control", id: "companyInput" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :tax, for: "taxInput" %><br>
        <div class = "col-md-12">
          <%= f.text_field :tax, class: "form-control", id: "taxInput" %>
        </div>
      </div>

      <div class = "form-group">
        <%= f.label :salesperson, for: "salespersonInput" %>
        <div class = "col-md-12">
          <%= collection_select( :invoice, :employee_id, Employee.all, :id, :name, {}, { :multiple => false }) %>
        </div>
      </div>

      <div class = "form-group">
        <%= f.label "Status", for: "statusInput" %>
        <div class = "col-md-12">
          <%= f.select(:status_type, options_for_select([[ "PAID", "PAID" ], [ "PENDING", "PENDING" ]]),{include_blank: true}) %>
        </div>
      </div>

      <br>

      <div class="form-group">
        <div class = "col-md-12">
          <%= f.submit "Create Invoice", class: "btn btn-primary" %>
        </div>
      </div>

    <% end %>
  </div>
  <div class = "col-md-3">
  </div>
  
</div>

